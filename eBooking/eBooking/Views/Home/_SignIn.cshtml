<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Sign In</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="text-center">
                <div class="form-group">
                    <input type="text" class="form-control" id="txtMobNum" placeholder="Enter Registered Mobile Number">
                    <div id="txtMobNumVal" class="text-center invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btnSendOPT">Send OTP</button>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="txtOTP" placeholder="Enter OTP" hidden>
                    <div id="txtOTPVal" class="text-center invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btnSubmit" hidden>Submit</button>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-info">Register Here</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<environment include="Development">
    <script src="~/jquery/Login/login.js"></script>
</environment>